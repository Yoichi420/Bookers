<h1>Editing Book</h1>
<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>

<% if @book.errors.any? %>
  <h2><%= @book.errors.count %>error prohibited this book from being saved:</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="field">
 <h4>Title</h4>
 <%= f.text_field :title %>
</div>

<div class="field">
 <h4>Body</h4>
 <%= f.text_area :body %>
</div>

<div class="field">
 <%= f.submit 'Update Book' %>
</div> 

