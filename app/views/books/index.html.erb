<P id="flash"><%= notice %></P>
  <div class="table">
<h1>Books</h1>
 <table>
  <thead>
   <tr>
    <th class="title">title</th>
    <th class="body">body</th>
    <th colspan="3"></th>
   </tr>
  </thead> 
  
   
  <tbody>
  <% @books.each do |book| %>
   <tr>
    <td ><%= book.title %></td>
    <td ><%= book.body %> </td>
    <td><%= link_to 'Show', book_path(book), data: {"turbolinks" => false},class:"link" %></td>
    <td><%= link_to 'Edit', edit_book_path(book), data: {"turbolinks" => false},class:"link" %></td>
    <td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sureï¼Ÿ", data: {"turbolinks" => false},class:"link" %></td>

   </tr>
 <% end %>
  </tbody>
 </table>
  </div>



<h2>New book</h2>
<%= form_with model: Book.new do |f| %>
<div id="error">
 <% if @book.errors.any? %>
  <h2><%= @book.errors.count %>error prohibited this book from being saved:</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>


<div class="field">
 <h4>Title</h4>
 <%= f.text_field :title %>
</div>

<div class="field">
 <h4>Body</h4>
 <%= f.text_area :body %>
</div>

<div class="field"> 
<a><%= f.submit 'Create Book' %></a>
</div>
<% end %>